{
  "expo": {
    "name": "Bookmates",
    "slug": "bookmates",
    "platforms": ["ios", "android", "web"],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "privacy": "unlisted",
    "description": "Bookmates is a React Native application that connects people through the books they read. Check the project source code at: https://github.com/Coral-Tech/bookmates",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    }
  }
}
